<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/android_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_height"
        android:layout_marginStart="@dimen/layout_margin"
        android:background="@null"
        android:ems="10"
        android:hint="@string/version_hint"
        android:inputType="textPersonName"
        android:autofillHints="" />

    <EditText
        android:id="@+id/code_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_height"
        android:layout_marginStart="@dimen/layout_margin"
        android:background="@null"
        android:ems="10"
        android:hint="@string/code_name_hint"
        android:inputType="textPersonName"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginEnd="@dimen/layout_margin"
        android:onClick="onAdd"
        android:text="@string/lbl_add_txt"
        android:textColor="@color/black"
        app:backgroundTint="@color/add_button" />

    <TableLayout
        android:id="@+id/tbl_phone_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        android:layout_margin="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:fontFamily="@font/roboto"
                android:text="@string/col_version"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"
                android:paddingLeft="3dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_primary"
                android:text="@string/col_code_name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:paddingLeft="3dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin_top"
                android:layout_marginEnd="@dimen/row_margin_end"
                android:layout_weight="1"
                android:background="@color/table_row_bg"
                android:text="@string/version_nine" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin_top"
                android:background="@color/table_row_bg"
                android:text="@string/code_name_pie" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin_top"
                android:layout_marginEnd="@dimen/row_margin_end"
                android:layout_weight="1"
                android:background="@color/table_row_bg"
                android:text="@string/version_eight" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_margin_top"
                android:background="@color/table_row_bg"
                android:text="@string/code_name_oreo" />
        </TableRow>
    </TableLayout>


</LinearLayout>